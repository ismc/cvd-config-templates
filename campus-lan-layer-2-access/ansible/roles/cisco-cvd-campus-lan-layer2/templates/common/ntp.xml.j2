#jinja2:lstrip_blocks: True
<config>
  <native xmlns="http://cisco.com/ns/yang/Cisco-IOS-XE-native">
    {% if cvd_ntp_servers %}
    <ntp>
      <server xmlns="http://cisco.com/ns/yang/Cisco-IOS-XE-ntp">
        <server-list>
          {% for item in cvd_ntp_servers %}
          <ip-address>{{ item }}</ip-address>
          {% endfor %}
        </server-list>
      </server>
    </ntp>
    {% endif %}
    <clock>
      <timezone>
          <zone>{{ cvd_clock_timezone }}</zone>
          <hours>{{ cvd_clock_offset }}</hours>
          <minutes>0</minutes>
      </timezone>
      <summer-time>
        <zone>{{ cvd_clock_summer_time }}</zone>
        <recurring/>
      </summer-time>
    </clock>
    <service>
      <timestamps>
        <debug>
          <datetime>
            <msec>
              <localtime/>
            </msec>
          </datetime>
        </debug>
        <log>
          <datetime>
            <msec/>
            <localtime/>
          </datetime>
        </log>
      </timestamps>
    </service>
  </native>
</config>
