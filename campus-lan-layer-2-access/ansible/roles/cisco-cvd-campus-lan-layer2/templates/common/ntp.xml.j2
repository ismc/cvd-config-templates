<config>
  <native xmlns="http://cisco.com/ns/yang/Cisco-IOS-XE-native">

    <ntp>
      <server xmlns="http://cisco.com/ns/yang/Cisco-IOS-XE-ntp">
        <server-list>
          <ip-address>{{ cvd_ntp_servers }}</ip-address>
        </server-list>
      </server>
    </ntp>

    <clock>
      <timezone>
          <zone>{{ cvd_clock_timezone }}</zone>
          <hours>{{ cvd_clock_offset }}</hours>
          <minutes>0</minutes>
      </timezone>

      <summer-time>
        <zone>{{ cvd_clock_summer_time }}</zone>
        <recurring/>
      </summer-time>
    </clock>

    <service>
      <timestamps>

        <debug>
          <datetime>
            <msec>
              <localtime/>
            </msec>
          </datetime>
        </debug>

        <log>
          <datetime>
            <msec/>
            <localtime/>
          </datetime>
        </log>

      </timestamps>
    </service>

  </native>
</config>
